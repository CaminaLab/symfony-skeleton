{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "^4.0",
        "symfony/flex": "^1.6",
        "symfony/framework-bundle": "^4.0",
        "symfony/monolog-bundle": "^3.5",
        "symfony/yaml": "^4.0",
        "ruflin/elastica": "^6.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "rector/rector": "0.6.13",
        "symfony/dotenv": "^4.0",
        "symfony/test-pack": "^1.0",
        "symfony/web-server-bundle": "^4.0",
        "symplify/easy-coding-standard": "^7.2",
        "vimeo/psalm": "^3.8"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "git config core.hooksPath .githooks || echo 'Git not available'"
        ],
        "test": "vendor/bin/simple-phpunit",
        "ecs": "vendor/bin/ecs check src tests --fix --ansi",
        "stan": "vendor/bin/phpstan analyze --ansi",
        "psalm": "vendor/bin/psalm"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.*"
        }
    }
}
